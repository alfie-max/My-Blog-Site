<h1>New Post</h1>

<%= form_for @blogpost, url: blogpost_index_path, method: 'POST' do |f| %>
  <div class="field form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :Body %>
    <%= f.text_area :content, class: "form-control" , rows: 10 %>
  </div>

  <div class="btn-lg form-group center">
    <%= f.submit "Submit" %>
  </div>
<% end %>
